<div class="row mt-4">


  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-6">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
            <div class="col-md-3">
              <button id="edit" type="submit" class="btn" data-id="{{project.id}}"><a class="link" href="/edit/{{project.id}}">EDIT</a></button>
        {{!-- <button id="edit" class="btn btn-sm btn-alert" data-id="{{project.id}}">EDIT</button> --}}
      </div>
      <div class="col-md-3">
        <button id="delete" class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="row mt-4">
        <div class="col-md-3">
        <button id="add" class="btn"><a class="link" href="profile/add">ADD POST</a></button>
      </div>
</div>

<script src="./js/profile.js"></script>

